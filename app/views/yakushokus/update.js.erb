model = 'yakushoku'

$('form#edit_' + model).clear_previous_errors()

<% if @yakushoku.errors.any? %>  
  $('form#edit_' + model).render_form_errors(model, '<%=@yakushoku.errors.messages.to_json.html_safe%>')
<% else %>
  $('#yakushoku-edit-modal').modal('hide');
  $("#yakushokus").DataTable().row('tr.selected').remove();
  $('#yakushokus').DataTable().row.add([
    "<%=@yakushoku.id%>",
    "<%=@yakushoku.code%>",
    "<%=@yakushoku.name%>"
    ]).draw( false );
  $('#yakushokus').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
