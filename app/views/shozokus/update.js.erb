model = 'shozoku'

$('form#edit_' + model).clear_previous_errors()

<% if @shozoku.errors.any? %>  
  $('form#edit_' + model).render_form_errors(model, '<%=@shozoku.errors.messages.to_json.html_safe%>')
<% else %>
  $('#shozoku-edit-modal').modal('hide');
  $("#shozokus").DataTable().row('tr.selected').remove();
  $('#shozokus').DataTable().row.add([
    "<%=@shozoku.id%>",
    "<%=@shozoku.code%>",
    "<%=@shozoku.name%>"
    ]).draw( false );
  $('#shozokus').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
