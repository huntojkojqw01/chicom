model = 'role'

$('form#new_' + model).clear_previous_errors()

<% if @role.errors.any? %>  
  $('form#new_' + model).render_form_errors(model, '<%=@role.errors.messages.to_json.html_safe%>')
<% else %>
  $('#role-new-modal').modal('hide'); 
  $('#roles').DataTable().row.add( [
    "<%=@role.id%>",
    "<%=@role.code%>",
    "<%=@role.name%>",
    "<%=@role.rank%>"
  ]).draw( false );
<% end %>
